  cursor:pointer;
}

#legend-layer-menu .content-container h2 {
  position:relative;
}

.hidden {
  display:none;
}

.input-form {
  position:absolute;
  top:0;
  left:0;
  background-color:white;
  border:solid 1px #aaa;
  box-shadow:1px 1px 1px rgba(0,0,0,.4);
  padding:10px;
}
